# Example environment variables for e-comm backend

# Copy to a file named .env and fill real values (DO NOT commit .env)

# App

PORT=5000
NODE_ENV=development

# MongoDB (development/production)

# Example local: mongodb://localhost:27017/ecomm

# Example Atlas: mongodb+srv://<user>:<pass>@cluster0.mongodb.net/ecomm

MONGO_URI=

# JWT

JWT_SECRET=change_this_to_a_long_random_string

# Stripe

STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Frontend URL used for redirect after successful payment

FRONTEND_URL=[http://localhost:3000](http://localhost:3000)

# Optional: logging / debug

# DEBUG=true
