            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Product\",\n  \"price\": 100,\n  \"image\": \"/images/sample.jpg\",\n  \"brand\": \"Sample Brand\",\n  \"category\": \"Electronics\",\n  \"countInStock\": 50,\n  \"description\": \"This is a sample product\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/products",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "products"
